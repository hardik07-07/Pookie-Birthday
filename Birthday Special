    <script>
        let step = 1;
        function checkAnswer() {
            let answer = document.getElementById("answer").value.toLowerCase().trim();
            let response = document.getElementById("response");
            let question = document.getElementById("question");
            let riddle = document.getElementById("riddle");
            
            if (step === 1 && answer === "pookie") {
                response.innerHTML = "Correct! Next riddle coming up...";
                riddle.innerHTML = "\"Ek aisi cheez jo bina mile bhi ho sakti hai, jo roz badhti hai, kabhi kam nahi hoti, batao kya hai?\"";
                step++;
            } else if (step === 2 && (answer === "pyaar" || answer === "love")) {
                response.innerHTML = "Amazing! One last step...";
                riddle.innerHTML = "\"Ek chhota sa update chahiye, dosti se ek aur kadam aage. Kya tum â€˜Humsafarâ€™ version install karogi?\"";
                step++;
            } else if (step === 3 && (answer === "haan" || answer === "yes")) {
                response.innerHTML = "ğŸ‰ Congratulations, Pookie! Tumne saare riddles solve kar liye! ğŸ‰";
                riddle.innerHTML = "ğŸ’Œ Final Message: \"Pookie, tum sirf ek dost nahi, ek feeling ban chuki hoâ€¦ Kya tum â€˜Dost se Humsafarâ€™ version install karogi? â¤ï¸\"";
                step++;
            } else {
                response.innerHTML = "Oops! Try again, Pookie! ğŸ¤”ğŸ’–";
            }
            response.classList.remove("hidden");
            document.getElementById("answer").value = "";
        }
    </script>
